@using System
@using System.Collections.Generic
@{
    var months = new Dictionary<int, string>
    {
        {1, "January"},
        {2, "February"},
        {3, "March"},
        {4, "April"},
        {5, "May"},
        {6, "June"},
        {7, "July"},
        {8, "August"},
        {9, "September"},
        {10, "October"},
        {11, "November"},
        {12, "December"}
    };
    ViewBag.Top = DateTime.Now.Year + " Great Bug Open: " + months[DateTime.Now.Month];
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
        <script type="text/javascript">
            $(document).ready(function() {
                $("#date").datepicker({ dateFormat: 'dd/mm/yy' });
            });
        </script>
    </head>
    <body>
        <div class="page">
            <section id="container">
                <div id="title">
                    <h1><a href="@Url.Action("Index", "Home")"><img src="@Url.Content("/Content/themes/base/images/ladybug.jpg")" alt="Edit" alt="ladybug" class="bugimage" /></a>@ViewBag.Top</h1>
                </div>
                <div id="login">
                    @Html.ActionLink("Admin", "Index", "Admin")
                </div>
                <div id="results">
                    @RenderBody()
                </div>
            </section>
            <footer>
            </footer>
        </div>
    </body>
</html>