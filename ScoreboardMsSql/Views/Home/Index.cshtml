@using System
@using ScoreboardMsSql.Controllers
@model Tuple<System.Collections.Generic.IEnumerable<HomeController.ResultItems>, int>

@{
    ViewBag.Title = DateTime.Now.Year + " Great Point Open";
}

<META HTTP-EQUIV="REFRESH" CONTENT="60" />

<div id="results">
    <table>
        <thead>
            <tr>
                <th class="display-label">POS.</th>
                <th class="display-label">Name</th>
                <th class="display-label">LOW</th>
                <th class="display-label">MID</th>
                <th class="display-label">HIGH</th>
                <th class="display-label">TOTAL</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var row in Model.Item1)
            {
                <tr>
                    <td class="display-field">@row.Pos</td>
                    <td class="display-field">@row.Name</td>
                    <td class="display-field">@row.Low</td>
                    <td class="display-field">@row.Mid</td>
                    <td class="display-field">@row.High</td>
                    <td class="display-field">@row.Total</td>
                </tr>
            }         
        </tbody>
    </table>
    <div id="totals">
        <h2>Total Points Caught: @Model.Item2</h2>
        <p>Thank you to everyone who participated. Keep squashing those bugs!</p>
    </div><!--End totals div -->
</div>