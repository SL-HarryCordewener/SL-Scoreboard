@model ScoreboardMsSql.Models.Scoreboard.ScoreboardAwards
@Html.AntiForgeryToken() 

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>ScoreboardAwards</legend>

    <div class="display-label">Time of Award</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.AwardTime)
    </div>
    
    <div class="display-label">User</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.AwardUser.Name)
    </div>
    
    <div class="display-label">Point Description</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.AwardPoint.Description)
    </div>

    <div class="display-label">Awarded Points</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.AwardPoint.Points)
    </div>

</fieldset>
