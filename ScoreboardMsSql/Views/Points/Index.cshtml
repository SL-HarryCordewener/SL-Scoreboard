@using ScoreboardMsSql.Models.Scoreboard
@model System.Collections.Generic.IEnumerable<ScoreboardMsSql.Models.Scoreboard.ScoreboardPoints>

@{
    ViewBag.Title = "Point Admin Index";
}

<h2>@ViewBag.Title</h2>
<hr/>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<br />
<table class="admin">
    <tr>
        <th>
            Description 
        </th>
        <th>
            Points
        </th>
        <th></th>
    </tr>

    @foreach (ScoreboardPoints item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Points)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                @Html.ActionLink("Delete", "Delete", new {id = item.Id})
            </td>
        </tr>
    }

</table>